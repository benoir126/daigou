                <label string="下单数量" />
                <field name="qte_order"/>

                <label string="已经购买数量" />
                <field name="qte_ok"/>

                <label string="付款总数" />
                <field name="paye_total"/>

                <label string="是否包邮" />
                <field name="fl_baoyou"/>

                <label string="是否已经付运费" />
                <field name="fl_yunfei"/>

                <label string="备注" />
                <field name="commentaire_achat"/>
