<?xml version="1.0" encoding="UTF-8"?>

<openerp>

    <data>

    <record model="ir.ui.view" id="client_adresse_form"> 

        <field name="name">client.adresse</field> 

        <field name="model">daigou.client</field> 

        <field name="arch" type="xml">

            <form string="Client"> 

                <label string="姓名" />
                <field name="name"/> 

                <label string="微信号" />
                <field name="weixinname"/>  

                <label string="电话号码" />
                <field name="telephone"/>

                <label string="地址" />
                <field name="adresse"/>

                <label string="城市" />
                <field name="city"/>

                <label string="邮编" />
                <field name="cp"/>

                <label string="省份" />
                <field name="province"/>

                <label string="国家" />
                <field name="country"/>
            </form>

        </field>

    </record>


    <record model="ir.ui.view" id="client_adresse_tree">

        <field name="name">client.tree</field>

        <field name="model">daigou.client</field>

        <field name="type">tree</field> 

        <field name="arch" type="xml">

            <tree string="List.Client" > 

                <field name="name"/>

                <field name="weixinname"/>

                <field name="telephone"/>

                <field name="adresse"/>

                <field name="city"/>

            </tree>

        </field>

    </record>


    <record model="ir.actions.act_window" id="action_client"> 

        <field name="name">客户信息</field>

        <field name="res_model">daigou.client</field> 

        <field name="view_type">form</field> 

        <field name="view_mode">tree,form</field>

    </record>


    <menuitem id="daigou" name="代购业务"/>

       <menuitem name="代购业务管理" id="section_main_menu_daigou" parent="daigou" />

        <menuitem name="客户信息管理" id="choix_client" parent="section_main_menu_daigou" action="action_client"/>

    </data>

</openerp>
