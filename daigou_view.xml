<?xml version="1.0" encoding="UTF-8"?>

<openerp>

    <data>

    <record model="ir.ui.view" id="client_adresse_form"> 

        <field name="name">client.adresse</field> 

        <field name="model">daigou.client</field> 

        <field name="arch" type="xml">

            <form string="Client"> 

                <label string="Name" />
                <field name="name"/> 

                <label string="Wei Xin ID" />
                <field name="weixinname"/>  

                <label string="Number of telephone" />
                <field name="telephone"/>

                <label string="Adresse of client" />
                <field name="adresse"/>

                <label string="City" />
                <field name="city"/>

                <label string="CP" />
                <field name="cp"/>

                <label string="Province" />
                <field name="province"/>

                <label string="Country" />
                <field name="country"/>
            </form>

        </field>

    </record>


    <record model="ir.ui.view" id="client_adresse_tree">

        <field name="name">client.tree</field>

        <field name="model">daigou.client</field>

        <field name="type">tree</field> 

        <field name="arch" type="xml">

            <tree string="List.Client" > 

                <field name="name"/>

                <field name="weixinname"/>

                <field name="telephone"/>

                <field name="adresse"/>

                <field name="city"/>

            </tree>

        </field>

    </record>


    <record model="ir.actions.act_window" id="action_client"> 

        <field name="name">Client</field> 

        <field name="res_model">daigou.client</field> 

        <field name="view_type">form</field> 

        <field name="view_mode">tree,form</field>

    </record>


    <menuitem id="daigou" name="代购业务"/>

       <menuitem name="代购业务" id="section_main_menu_daigou" parent="daigou" />

        <menuitem name="客户地址信息" id="choix_client" parent="section_main_menu_daigou" action="action_client"/>

    </data>

</openerp>
