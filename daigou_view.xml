<?xml version="1.0" ?>

<openerp>

    <data>

    <record model="ir.ui.view" id="client_adresse_form"> 

        <field name="name">client.adresse</field> 

        <field name="model">daigou.client</field> 

        <field name="arch" type="xml">

            <form string="Client"> 

                <label string="Name" />

                <field name="name"/> 

                <label string="Wei Xin ID" /> 

                <field name="weixinname"/>  

            </form>

        </field>

    </record>


    <record model="ir.ui.view" id="client_adresse_tree">

        <field name="name">client.tree</field>

        <field name="model">daigou.client</field>

        <field name="type">tree</field> 

        <field name="arch" type="xml">

            <tree string="List.Client" > 

                <field name="name"/>

                <field name="weixinname"/>

            </tree>

        </field>

    </record>



    <record model="ir.actions.act_window" id="action_client"> 

        <field name="name">Client</field> 

        <field name="res_model">daigou.client</field> 

        <field name="view_type">form</field> 

        <field name="view_mode">tree,form</field>

    </record>


    <menuitem id="daigou" name="Daigou"/>

       <menuitem name="Daigou" id="section_main_menu_daigou" parent="daigou" />

        <menuitem name="clients" id="choix_client" parent="section_main_menu_daigou" action="action_client"/>

    </data>

</openerp>
